{
   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
   "extends": [
      "github>renovatebot/.github"
   ],
   "packageRules": [
      {
         "matchPackagePatterns": "^(@angular|typescript)",
         "groupName": "angular packages",
         "excludePackageNames": "foo"
      },
      {
         "matchDepTypes": [
            "peerDependencies"
         ],
         "rangeStrategy": "widen"
      },
      {
         "matchDepTypes": [
            "devDependencies"
         ],
         "minor": {
            "automerge": true
         },
         "major": {
            "automerge": false
         },
         "schedule": null
      },
      {
         "respectLatest": false,
         "minor": {
            "automerge": true
         },
         "major": {
            "automerge": false
         },
         "schedule": "before 5am on Monday",
         "matchDepTypes": [
            "optionalDependencies"
         ]
      }
   ]
}
